{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "commonjs", // Jest uses commonjs
    "paths": {
      "@/*": ["./*"]
    },
    "noImplicitAny": false, // Allows 'any' types, which can apply to strings
    "strictNullChecks": false, // Allows 'null' and 'undefined' to be assigned to strings
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules"]
}
